{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".*\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "!<rootDir>/**/*.module.ts",
    "!<rootDir>/**/index.ts",
    "!<rootDir>/**/migrations/*",
    "!<rootDir>/main.ts"
  ],
  "coverageDirectory": "../coverage",
  "setupFiles": ["<rootDir>/../test/setup.ts"],
  "testEnvironment": "node",
  "moduleNameMapper": {
    "~/(.*)": "<rootDir>/$1"
  }
}
